public class Main {
    public static void main(String[] args) {
        int[][] sudokuGrid = {
                {5, 3, 0, 0, 7, 0, 0, 0, 0},
                {6, 0, 0, 1, 9, 5, 0, 0, 0},
                {0, 9, 8, 0, 0, 0, 0, 6, 0},
                {8, 0, 0, 0, 6, 0, 0, 0, 3},
                {4, 0, 0, 8, 0, 3, 0, 0, 1},
                {7, 0, 0, 0, 2, 0, 0, 0, 6},
                {0, 6, 0, 0, 0, 0, 2, 8, 0},
                {0, 0, 0, 4, 1, 9, 0, 0, 5},
                {0, 0, 0, 0, 8, 0, 0, 7, 9}
        };

        SudokuGraph graph = new SudokuGraph(sudokuGrid);

        // BFS Solution
        System.out.println("Attempting BFS...");
        SudokuBFS bfsSolver = new SudokuBFS();
        long bfsStartTime = System.nanoTime();
        boolean bfsSolved = bfsSolver.solve(graph);
        long bfsEndTime = System.nanoTime();
        if (bfsSolved) {
            System.out.println("BFS solved the puzzle in " + (bfsEndTime - bfsStartTime) / 1_000_000 + " ms.");
        } else {
            System.out.println("BFS failed to solve the puzzle.");
        }

        // DLS Solution
        System.out.println("Attempting DLS...");
        SudokuDLS dlsSolver = new SudokuDLS();
        long dlsStartTime = System.nanoTime();
        boolean dlsSolved = dlsSolver.solve(graph, 81); // Depth limit is the total number of cells
        long dlsEndTime = System.nanoTime();
        if (dlsSolved) {
            System.out.println("DLS solved the puzzle in " + (dlsEndTime - dlsStartTime) / 1_000_000 + " ms.");
        } else {
            System.out.println("DLS failed to solve the puzzle.");
        }
    }
}
